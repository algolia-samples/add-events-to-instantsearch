# Algolia Configuration
# https://www.algolia.com/doc/guides/security/api-keys/#access-control-list-acl
REACT_APP_ALGOLIA_APP_ID=your_app_id
REACT_APP_ALGOLIA_API_KEY=your_search_api_key
REACT_APP_ALGOLIA_INDEX_NAME=pokemon-cards

# Optional: Virtual replica index names for price sorting
# If not set, will default to ${REACT_APP_ALGOLIA_INDEX_NAME}_price_asc and _price_desc
REACT_APP_ALGOLIA_INDEX_NAME_PRICE_ASC=pokemon-cards_price_asc
REACT_APP_ALGOLIA_INDEX_NAME_PRICE_DESC=pokemon-cards_price_desc

# User token for analytics tracking
REACT_APP_USER_TOKEN=your_user_token

# Optional: Segment analytics integration
REACT_APP_SEGMENT_WRITE_KEY=your_segment_write_key
